@model Produto

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Novo Produto</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                <div class="form-floating py-2 col-12">
                    <input asp-for="Titulo" class="form-control border-0 shadow" />
                    <label asp-for="Titulo" class="ms-2"></label>
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <textarea asp-for="Descricao" class="form-control border-0 shadow"></textarea>
                    <label asp-for="Descricao" class="ms-2"></label>
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ISBN" class="form-control border-0 shadow" />
                    <label asp-for="ISBN" class="ms-2"></label>
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Autor" class="form-control border-0 shadow" />
                    <label asp-for="Autor" class="ms-2"></label>
                    <span asp-validation-for="Autor" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ListaPreco" class="form-control border-0 shadow" />
                    <label asp-for="ListaPreco" class="ms-2"></label>
                    <span asp-validation-for="ListaPreco" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Preco" class="form-control border-0 shadow" />
                    <label asp-for="Preco" class="ms-2"></label>
                    <span asp-validation-for="Preco" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Preco50" class="form-control border-0 shadow" />
                    <label asp-for="Preco50" class="ms-2"></label>
                    <span asp-validation-for="Preco50" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Preco100" class="form-control border-0 shadow" />
                    <label asp-for="Preco100" class="ms-2"></label>
                    <span asp-validation-for="Preco100" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <select asp-for="CategoriaId" asp-items="ViewBag.Categorias" class="form-select border-0 shadow">
                        <option disabled selected>Selecione uma Categoria</option>
                    </select>
                    <label asp-for="CategoriaId" class="ms-2"></label>
                    <span asp-validation-for="CategoriaId" class="text-danger"></span>
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">
                            <i class="bi bi-plus-circle"></i> Adicionar
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Produto" asp-action="Index" class="btn btn-outline-primary border form-control">
                            <i class="bi bi-arrow-left-circle"></i> Voltar
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}