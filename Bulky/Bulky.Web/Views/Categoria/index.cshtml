@model List<Categoria>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Lista de Categorias
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="" asp-action="" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Nova Categoria
            </a>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Categoria</th>
                    <th>Ordem de Exibição</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var categoria in Model.OrderBy(c => c.OrdemExibicao))
                {
                    <tr>
                        <td>@categoria.Nome</td>
                        <td>@categoria.OrdemExibicao</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>