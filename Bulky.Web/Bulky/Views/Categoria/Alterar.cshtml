@model Categoria

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Alterar Categoria</h2>
            <hr />
        </div>
        <div class="mb-3 row">
            <label asp-for="Nome" class="form-label"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="mb-3 row">
            <label asp-for="OrdemExibicao" class="form-label"></label>
            <input asp-for="OrdemExibicao" class="form-control" />
            <span asp-validation-for="OrdemExibicao" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">
                    <i class="bi bi-check-circle"></i> Alterar
                </button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Categoria" asp-action="Index" class="btn btn-outline-secondary border form-control">
                    <i class="bi bi-arrow-left-circle"></i> Voltar
                </a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
